<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/cardview_default_elevation">

        <RelativeLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageHY"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/hathayoga"
                android:scaleType="centerCrop"
                android:transitionName="img"></ImageButton>

            <FrameLayout
                android:id="@+id/layoutDateHY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageHY"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="164dp"
                android:layout_marginTop="152dp"
                android:layout_marginEnd="26dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="19dp"
                android:background="@drawable/shadow"
                android:padding="5dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/calendar"></ImageView>

                <TextView
                    android:id="@+id/textDateHY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="10dp"
                    android:text="10 de Junho de 2020"
                    android:textColor="#606060"></TextView>

            </FrameLayout>

            <TextView
                android:id="@+id/titleHY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageHY"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:fontFamily="sans-serif-light"
                android:text="Hatha Yoga"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/descHY"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleHY"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="16dp"
                android:text="Hatha Yoga é a yoga clássica, as posturas não exigem ..."
                android:textSize="13sp"></TextView>

            <TextView
                android:id="@+id/yogaGoHY"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/descHY"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:singleLine="true"
                android:text="YogaGo • "
                android:textColor="#000000"></TextView>

            <TextView
                android:id="@+id/timeHY"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/descHY"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/yogaGoHY"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="9 horas atrás"></TextView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>